<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.komo.pertaminadmd.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
            android:paddingTop="40dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <!--Profile Info-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:layout_height="70dp"
                    android:background="@color/colorSecondaryGrey"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="Mr. Putra"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite"
                    android:text="Driver"/>
            </LinearLayout>

            <!--Nav Button-->
            <LinearLayout
                android:id="@+id/nav_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:alpha="0.8"
                    android:layout_height="wrap_content"
                    android:text="Pengantaran"/>
            </LinearLayout>

            <!--Nav Button-->
            <LinearLayout
                android:id="@+id/nav_button_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:alpha="0.8"
                    android:layout_height="wrap_content"
                    android:text="Histori"/>
            </LinearLayout>

            <!--Nav Button-->
            <LinearLayout
                android:id="@+id/nav_button_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:alpha="0.8"
                    android:layout_height="wrap_content"
                    android:text="Logout"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/cancel_box"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:alpha="0.5"
            android:background="@color/colorSecondaryDarkGrey">

        </LinearLayout>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
